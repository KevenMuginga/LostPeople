<div class="space">
    <p>This page is for post people that was finded by samebody, for search people that are been searched click <a href="@Url.Action("Index", "Lost")">Here</a></p>
</div>
<div>
    @foreach (LostPeople.Models.Finded finded in Model)
    {
        <div class="space row">
            <div class="col-md-6">
                <h3><strong>@finded.Namme-</strong><strong style="color:#00ff21;">FINDED</strong></h3>

                <labe>More Knew like </labe>
                <p><Strong>@finded.MoreKnowedLike</Strong></p>

                <label>Place that he is Now</label>
                <p><strong>@finded.PlaceHeIsNow</strong></p>

                <label>Number of who are with him</label>
                <p><strong>@finded.NumberWho</strong></p>
            </div>
            
            <div class="col-md-6">
                @if (finded.Imagem != null)
                {
                    var base64 = Convert.ToBase64String(finded.Imagem);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                <div>
                    <img src="@imgSrc" style="max-width:100%; max-height:300px; border-radius:10px;" />
                </div>
                    
                }
            </div>
        </div>
    }
</div>